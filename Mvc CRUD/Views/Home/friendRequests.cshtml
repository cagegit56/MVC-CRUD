        <div class="container mt-5">
            <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist" style="font-weight:500">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="friend-tab" data-bs-toggle="tab" style="color: #0d6efd"
                            data-bs-target="#friend" type="button" role="tab" aria-controls="friend"
                            aria-selected="true">
                        Add Friends
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="request-tab" data-bs-toggle="tab" style="color: #0d6efd"
                            data-bs-target="#request" type="button" role="tab" aria-controls="request"
                            aria-selected="false">
                        View Friend Request
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sentRequest-tab" data-bs-toggle="tab" style="color: #0d6efd"
                            data-bs-target="#sentReq" type="button" role="tab" aria-controls="sentReq"
                            aria-selected="false">
                        Sent Friend Request
                    </button>
                </li>
            </ul>

            <div class="tab-content mt-4" id="myTabContent">
                <div class="tab-pane fade show active" id="friend" role="tabpanel" aria-labelledby="friend-tab">
                    <div class="card friend-card w-100 p-3">
                        <div id="friendsContainer" class="d-flex flex-column align-items-center gap-3"></div>
                    </div>
                </div>
                <div class="tab-pane fade" id="request" role="tabpanel" aria-labelledby="request-tab">
                    <div class="card friend-card w-100 p-3">
                        <div id="friendsRequestContainer" class="d-flex flex-column align-items-center gap-3"></div>
                    </div>
                </div>
                <div class="tab-pane fade" id="sentReq" role="tabpanel" aria-labelledby="sentRequest-tab">
                    <div class="card friend-card w-100 p-3">
                        <div id="SentRequestContainer" class="d-flex flex-column align-items-center gap-3"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 gap-3">
            <form id="pageSizeForm" class="d-flex align-items-center gap-2 flex-wrap">
                <label for="pageSize" class="mb-0">Rows per page:</label>
                <select id="pageSize" class="form-select form-select-sm w-auto">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </form>

            <div class="d-flex flex-wrap align-items-center gap-3">
                <div id="paginationInfo" class="text-muted small"></div>
                <ul class="pagination mb-0 flex-wrap" id="pagination"></ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentPage = 1;
        let pageSize = 5;
        let selectedTab = "";

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('pageSize').addEventListener('change', handlePageSizeChange);   
            const tabElements = document.querySelectorAll('button[data-bs-toggle="tab"]');

            tabElements.forEach(tab => {
                tab.addEventListener('shown.bs.tab', function (event) {
                    const activeTabId = event.target.id;

                    if (activeTabId === "friend-tab") {
                        selectedTab = "friend";
                        loadFriends(pageSize, currentPage);
                    } else if (activeTabId === "request-tab") {
                        selectedTab = "request";
                         loadFriendRequest(pageSize, currentPage);
                    } else if (activeTabId === "sentRequest-tab") {
                        selectedTab = "sentRequest";
                        loadSentRequest(pageSize, currentPage);
                    }

                });
            });

            switch(selectedTab)
            {
                case 'friend':
                loadFriends(pageSize, currentPage);
                break;
                case 'request' :
                loadFriendRequest(pageSize, currentPage);
                break;
                case 'sentRequest' :
                loadSentRequest(pageSize, currentPage);
                break;
                default :
                loadFriends(pageSize, currentPage);
            }
            
        });

        /* ********************************************** Requesting ****************************************** */
        async function loadFriends(size,pageNumber) {
            try {
                 const response = await fetch(`/Home/friendRequests?pageSize=${size}&pageNumber=${pageNumber}`, {
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });
                if (!response.ok) throw new Error('Failed to fetch data');

                const result = await response.json(); 
                renderFriends(result.data);
                setupPagination(result.totalPages);
                updatePaginationInfo(result);
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('friendsContainer').innerHTML =
                    `<div class="alert alert-danger text-center w-100">Error loading friends. Please try again later.</div>`;
            }
        }

        function renderFriends(friends) {
            const container = document.getElementById('friendsContainer');
            container.innerHTML = '';

            if (!friends || friends.length === 0) {
                container.innerHTML = `<div class="alert alert-info text-center w-100">No friends found.</div>`;
                return;
            }

            friends.forEach(friend => {
                const card = document.createElement('div');
                card.id = `row-${friend.id}`;
                card.className = 'card h-card w-100 shadow-sm border-0 p-3';
                card.innerHTML = `
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div class="d-flex align-items-center mb-2 mb-sm-0">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                 style="width:50px; height:50px; font-size:1.5rem;">
                                ${(friend.userName || '?').charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <h6 class="fw-semibold mb-1">${friend.userName ?? 'Unknown User'}</h6>
                                <small class="text-muted">1.3k followers</small><br />
                                <small class="text-muted">3 Mutual Friends</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                             <button type="submit" id="sendBtn-${friend.id}" class="btn btn-primary px-3" onclick="sendFriendRequest('${friend.userId}','${friend.userName}', ${friend.id}, '${friend.email}')">
                                  <i class="fa-solid fa-user-plus me-1"></i>Add Friend
                             </button>
                         
                             <button id="removeBtn-${friend.id}" type="submit" class="btn btn-outline-danger px-3" onclick="removeUser('${friend.userId}','${friend.userName}', ${friend.id})">
                                  <i class="fa-solid fa-user-minus me-1"></i>Remove
                             </button>
                        </div>
                    </div>`;
                container.appendChild(card);
            });
        }

        async function sendFriendRequest(userid,friendName,id,email)
        {
            const btn = document.getElementById("sendBtn-" + id);
            const removebtn = document.getElementById("removeBtn-" + id);
            btn.disabled = true;
            btn.textContent = "Processing...";
            try
            {
                const res = await fetch(`/Home/request?toUserId=${encodeURIComponent(userid)}&toUserName=${encodeURIComponent(friendName)}&email=${encodeURIComponent(email)}`);
                if(res.ok)
                {
                    alert("Friend Request SuccessFully Sent.")
                    btn.textContent = "Request Sent"; 
                    removebtn.disabled = true;
                }else
                {
                    btn.disabled = false;
                    btn.textContent = "Add Friend";
                    alert(`Failed to send a friend request due to : ${res.message}`)
                }
            }catch(error)
            {
                btn.disabled = false;
                btn.textContent = "Add Friend";
                alert(`Failed to send a friend request due to :${res.message} ${error}`)
            }
        }


        async function removeUser(friendId,friendName,id)
        {
            const sendbtn = document.getElementById("sendBtn-" + id);
            const btn = document.getElementById("removeBtn-" + id);
            btn.disabled = true;
            btn.textContent = "Removing...";
            try
            {
                const res = await fetch(`/Home/BlockUser?blockUserId=${encodeURIComponent(friendId)}&blockUserName=${encodeURIComponent(friendName)}`,
                                   { method: "POST", headers: { "Content-Type": "application/json" }  });
                if(res.ok)
                {
                    alert("User Removed")
                    btn.textContent = "Removed";
                    sendbtn.disabled = true;
                }else
                {
                    btn.disabled = false;
                    btn.textContent = "Add Friend";
                    alert(`Failed to remove user due to : ${res.message}`)
                }
            }catch(error)
            {
                btn.disabled = false;
                btn.textContent = "Add Friend";
                alert(`Failed to remove user due to :${res.message}, ${error}`)
            }
        }

        /* *********************************************************************************** */


        /* ************************************************ Recieved Requests ******************************* */
         async function loadFriendRequest(size,pageNumber) {
            try {
                 const response = await fetch(`/Home/RecievedFriendRequest?pageSize=${size}&pageNumber=${pageNumber}`, {
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });
                if (!response.ok) throw new Error('Failed to fetch data');
                // const msg = "Welcome Home";
                // showAlert(msg);
                const result = await response.json();
                renderFriendRequests(result.data);
                setupPagination(result.totalPages);
                updatePaginationInfo(result);
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('friendsRequestContainer').innerHTML =
                    `<div class="alert alert-danger text-center w-100">Error loading friends. Please try again later.</div>`;
            }
        }

        function renderFriendRequests(friends) {
            const container = document.getElementById('friendsRequestContainer');
            container.innerHTML = '';

            if (!friends || friends.length === 0) {
                container.innerHTML = `<div class="alert alert-info text-center w-100">You have no pending friend request.</div>`;
                return;
            }

            friends.forEach(friend => {
                const card = document.createElement('div');
                card.id = `row-${friend.id}`;
                card.className = 'card h-card w-100 shadow-sm border-0 p-3';
                card.innerHTML = `
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div class="d-flex align-items-center mb-2 mb-sm-0">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                 style="width:50px; height:50px; font-size:1.5rem;">
                                ${(friend.userName || '?').charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <h6 class="fw-semibold mb-1">${friend.userName ?? 'Unknown User'}</h6>
                                <small class="text-muted">1.3k followers</small><br />
                                <small class="text-muted">3 Mutual Friends</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                             <button id="requestBtn-${friend.id}" type="submit" class="btn btn-primary px-3" onclick="acceptFriendRequest('${friend.userId}','${friend.userName}', ${friend.id})">
                                  <i class="fa-solid fa-user-plus me-1"></i>Accept Request
                             </button>

                             <button id ="rejectRequestBtn-${friend.id}" type="submit" class="btn btn-outline-danger px-3" onclick="cancelSentRequest('${friend.userId}', ${friend.id})">
                                  <i class="fa-solid fa-user-minus me-1"></i>Reject Request
                             </button>
                        </div>
                    </div>`;
                container.appendChild(card);
            });
        }

        async function acceptFriendRequest(userid,friendName,id)
        {
            const btn = document.getElementById("requestBtn-" + id);
            btn.disabled = true;
            btn.textContent = "Processing...";            
            try
            {
                const res = await fetch(`/Home/addFriends?userId=${userid}&frndName=${friendName}`, { method: "POST", headers: { "Content-Type": "application/json" }  });
                const result = await res.json();
                if(result.success)
                {
                    alert("Friend Request Accepted.")
                    const row = document.getElementById("row-" + id);
                    if (row)
                    row.remove();
                }else{
                    alert(`Failed to accept friend request due to : ${result.message}`)
                    btn.disabled = false;
                    btn.textContent = "Accept Request";
                }
            }catch(error)
            {
                alert(`Failed to accept friend Request due to : ${error}`)
                btn.disabled = false;
                btn.textContent = "Accept Request";
            }
        }

        /* *********************************************************************************** */

        /* ************************************************ Sent Requests ******************************* */


        async function loadSentRequest(size,pageNumber) {
            try {
                 const response = await fetch(`/Home/GetAllSentRequest?pageSize=${size}&pageNumber=${pageNumber}`, {
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });
                if (!response.ok) throw new Error('Failed to fetch data');

                const result = await response.json();
                renderSentRequests(result.data);
                setupPagination(result.totalPages);
                updatePaginationInfo(result);
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('SentRequestContainer').innerHTML =
                    `<div class="alert alert-danger text-center w-100">Error loading Sent Requests. Please try again later.</div>`;
            }
        }

        function renderSentRequests(friends) {
            const container = document.getElementById('SentRequestContainer');
            container.innerHTML = '';

            if (!friends || friends.length === 0) {
                container.innerHTML = `<div class="alert alert-info text-center w-100">You have no pending sent friend request.</div>`;
                return;
            }

            friends.forEach(friend => {
                const card = document.createElement('div');
                card.id = `row-${friend.id}`;
                card.className = 'card h-card w-100 shadow-sm border-0 p-3';
                card.innerHTML = `
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div class="d-flex align-items-center mb-2 mb-sm-0">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                 style="width:50px; height:50px; font-size:1.5rem;">
                                ${(friend.toUserName || '?').charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <h6 class="fw-semibold mb-1">${friend.toUserName ?? 'Unknown User'}</h6>
                                <small class="text-muted">1.3k followers</small><br />
                                <small class="text-muted">3 Mutual Friends</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                             <button id="rejectBtn-${friend.id}" type="submit" class="btn btn-primary px-3" onclick="cancelSentRequest('${friend.toUserId}', ${friend.id})">
                                  <i class="fa-solid fa-user-plus me-1"></i>Cancel Request
                             </button>

                             <button type="submit" class="btn btn-outline-danger px-3">
                                  <i class="fa-solid fa-user-minus me-1"></i>Message
                             </button>
                        </div>
                    </div>`;
                container.appendChild(card);
            });
        }

        async function cancelSentRequest(friendId,id)
        {
            const sentbtn = document.getElementById("rejectBtn-" + id);
            const requestbtn = document.getElementById("rejectRequestBtn-" + id);
            const btn = sentbtn || requestbtn;
            if(!btn) 
            {
                console.log(`buttton id is : ${btn}`, id);
                return;
            }
            btn.disabled = true;
            btn.textContent = "Processing...";

            try
            {
                const res = await fetch(`/Home/RejectRequest?friendUserId=${friendId}`, { method: "PUT", headers: { "Content-Type": "application/json" }  });
                const result = await res.json();
                if(result.success)
                {
                    alert(result.message)
                    const row = document.getElementById("row-" + id);
                    if(row)
                    row.remove();
                }else{
                    alert(`Failed to cancel friend Request due to :${result.message}`)
                     btn.disabled = false;
                     btn.textContent = "Cancel Request";
                }

            }catch(error)
            {
                alert(`Failed to cancel friend Request due to :${result.message}, ${error}`)
                btn.disabled = false;
                btn.textContent = "Cancel Request";
            }
        }

